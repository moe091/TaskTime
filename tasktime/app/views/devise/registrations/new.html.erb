<%= stylesheet_link_tag    "devise", :media => "all" %>

<div class="register-fields">
<h2 id="sign-up-head">Sign up</h2> 
<br />

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  

    <div class="field">
      <span class="reg-label-wrap">
        <%= f.label :email, class: "reg-label reg-email-label" %>
      </span>
      <span class="reg-field-wrap">
        <%= f.email_field :email, autofocus: true, class: "reg-field reg-email-field" %>
      </span>
    </div>


    <div class="field">
      <span class="reg-label-wrap">
        <%= f.label :username, class: "reg-label reg-username-label" %>
      </span>
      <span class="reg-field-wrap">
        <%= f.text_field :username, class: "reg-field reg-username-field" %>
      </span>
    </div>

    
    <div class="field">
      <span class="reg-label-wrap">
        
        <%= f.label :password, class: "reg-label reg-password-label"%>
<% if @minimum_password_length %>
          <em class="reg-label">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        
      </span>
      <span class="reg-field-wrap">
        <%= f.password_field :password, autocomplete: "off", class: "reg-field reg-password-field" %>
      </span>
    </div>


    <div c
    <div class="field">
      <span class="reg-label-wrap">
        <%= f.label :password_confirmation, class: "reg-label reg-pwconfirm-label" %><br />
      </span>
      <span class="reg-field-wrap">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "reg-field reg-pwconfirm-field" %>
      </span>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>

  </div> <!-- register fields -->

<% end %>

<%= render "users/shared/links" %>
