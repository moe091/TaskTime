<!DOCTYPE html>
<html>
<head>
  <title>Tasktime</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="col-sm-1"></div>
    <div class="col-sm-10">

      <div class="navbar-header">
        <a class="navbar-brand" href="/">Task-Time</a>
      </div>
      <ul class="nav navbar-nav">
        <li class="active"><a href="#">Home</a></li>
        <li><a href="#">Tasks</a></li>

      </ul>

      <ul class='nav navbar-nav pull-right nav-login'>

        <% if user_signed_in? %>
          <li><a href="#" id='username'><%= current_user.username %></a></li>
          <li class="active">  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
          <li></li>
          <li> </li>
        <% else %>
          <li><a href="/users/sign_in">Sign in</a></li>
          <li><a href="/users/sign_up">Register</a></li>
        <% end %>
      </ul>

  </div> <!-- container -->
</nav>


<%= yield %>

</body>
</html>
